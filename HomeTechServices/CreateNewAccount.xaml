        <TextBox x:Name="number" Grid.Column="4" HorizontalAlignment="Right" Height="30" Margin="0,13,74.5,14" Grid.Row="3" TextWrapping="Wrap" VerticalAlignment="Center" Width="134" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>
        <Label Content="Address" Grid.Column="3" HorizontalAlignment="Right" Margin="0,4.25" Grid.Row="4" VerticalAlignment="Center" FontSize="16"/>
        <TextBox x:Name="address" Grid.Column="4" Margin="5" Grid.Row="4" TextWrapping="Wrap" VerticalContentAlignment="Center" Grid.ColumnSpan="2"/>

    </Grid>
