<UserControl x:Class="HomeTechServices.ServiceDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeTechServices"
             mc:Ignorable="d" 
             Height="300" Width="500">

    
    <ListBox x:Name="ServiceListBox" ItemsSource="{Binding ServiceCollection}"
             SelectedItem="{Binding SelectedService}" Background="AliceBlue"
             ItemTemplate="{StaticResource ProductTemplate}" />
    
</UserControl>
